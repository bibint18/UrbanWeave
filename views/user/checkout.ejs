            </div>

            <!-- Show payment options dynamically if online payment is selected -->
            <div id="rzp-button1" style="display: none;">
              <button type="button" onclick="startOnlinePayment()">Proceed with Online Payment</button>
            </div>

            <!-- Items and Delivery -->
            <div class="card mb-3">
              <!-- <div class="card-body">
            <h5>3. Items and delivery</h5>
          </div> -->
            </div>
          </div>

          <!-- Right Section (Order Summary) -->
          <div class="col-lg-4">
            <div class="card">
              <div class="card-body">
                <!-- <h5 class="font-weight-bold">Order Summary</h5> -->
                <hr>
                <p>Total Items: <span class="float-right">
                    <%=totalProduct%>
                  </span></p>
                <p>Delivery Fee: <span class="float-right">Free Delivery!</span></p>
                <!-- <p>Payment Method: <span class="float-right"></span></p> -->
                <p>Original Total: <span class="float-right"><%=OriginalTotal%></span></p>
                <p>Sub Total: <span class="float-right" id="Subtotal"><%= total %></span></p>
                <hr>
                <p id="discountMessageBox" class="text-success"></p>
                <h5 class="text-danger font-weight-bold">Order Total: <span class="float-right"
                    data-original-amount="<%= total %>" id="TotalAmount">₹
                    <%=total%>
                  </span></h5>
                <button class="btn btn-warning btn-block font-weight-bold mt-4" id="">Place Order</button>
