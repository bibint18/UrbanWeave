<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="/stylesheet/user-login.css">
	<title>Login Page</title>
</head>
<body>
	
	<div id="container" class="contain">
		<!-- FORM SECTION -->
		<div class="row">
			<!-- SIGN UP -->
			<div class="col align-items-center flex-col sign-up">
				<div class="form-wrapper align-items-center">
					<div class="form sign-up">
						<form action="/signupSubmit" method="post"  onsubmit="validate(e)">
						<div class="input-group">
							<i class='bx bxs-user'></i>
							<input type="text" placeholder="Username" name="username" required>
						</div>
						<div class="input-group">
							<i class='bx bx-mail-send'></i>
							<input type="email" placeholder="Email" name="email" required>
						</div>
						<div class="input-group">
							<i class='bx bxs-lock-alt'></i>
							<input type="password" id="pass" placeholder="Password" name="password" required>
						</div>
						<div class="input-group">
							<i class='bx bxs-lock-alt'></i>
							<input type="password" id="cpass" placeholder="Confirm password" name="rpassword" required>
						</div>
						<button type="submit">
							Sign up
						</button>
						</form>
						<p>
							<span>
								Already have an account?
							</span>
							<b onclick="toggle()" class="pointer">
								Sign in here
							</b>
						</p>
					</div>
				</div>
			</div>
			<!-- END SIGN UP -->
			<!-- SIGN IN -->
			<div class="col align-items-center flex-col sign-in">
				<div class="form-wrapper align-items-center">
					<form action="/userLogin" method="post" class="Userlogin" >
					<div class="form sign-in">
						<div  class="input-group">
							<% if (error) { %>
								<p id="error" style="color: red;text-align: center;padding: 13px;font-size: 20px;"  onclick="toggle()" ><%= error %></p>
							<% } %>
							<i class='bx bxs-user'></i>
							<input type="text" placeholder="email-id" name="email" required>
						</div>
						<div class="input-group">
							<i class='bx bxs-lock-alt'></i>
							<input type="password" placeholder="Password" name="password" required>
						</div>
						
						<button type="submit">Login</button>
					</form>
					<br>
					<form action="/forgotPassword" method="post">
						<button type="submit" class="mt-3 bg-danger">Forgot password?</button>		
					</form>
					<button class="mt-3 bg-warning">Sign-in with google</button>
						<p>
							<span>
								Don't have an account?
							</span>
							<b onclick="toggle()"  class="pointer">
								Sign up here
							</b>
						</p>
					</div>
				</div>
			</div>
			<!-- END SIGN IN -->
		</div>
		<!-- END FORM SECTION -->
		<!-- CONTENT SECTION -->
		<div class="row content-row">
			<!-- SIGN IN CONTENT -->
			<div class="col align-items-center flex-col">
				<div class="text sign-in">
					<h2>
						Welcome
					</h2>
				</div>
				<div class="img sign-in">
					<!-- Add sign-in related image here -->
				</div>
			</div>
			<!-- END SIGN IN CONTENT -->
			<!-- SIGN UP CONTENT -->
			<div class="col align-items-center flex-col">
				<div class="img sign-up">
					<!-- Add sign-up related image here -->
				</div>
				<div class="text sign-up">
					<h2>
						Join with us
					</h2>
				</div>
			</div>
			<!-- END SIGN UP CONTENT -->
		</div>
		<!-- END CONTENT SECTION -->
	</div>
	<script>
		setTimeout(function() {
            const messageElement = document.getElementById('error');
            if (messageElement) {
                messageElement.style.display = 'none';
            }
        }, 5000);
		function validate(e){
			console.log(e,"ytgfyugy")
			const password = document.getElementById('pass').value
			const confirmPassword = document.getElementById('cpass').value
			const passwordRegex = /^(?=.*[A-Z])(?=.*[!@#$%^&*])(?=.{8,})/;
			if(!password.match(passwordRegex)){
				// e.preventDefault();
				alert("Password must be at least 8 characters long, contain at least one uppercase letter, and one special character.")
			}
		}
	</script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
	integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
	crossorigin="anonymous"></script>
	<script src="/script/user-login.js" defer></script>
</body>
</html>